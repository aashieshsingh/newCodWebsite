---
import Layout from "@layouts/Layout.astro";
import InnerHero from "@components/sections/InnerHero.astro";

const heroContent = {
    title: "Guidelines & Policy Document",
    description: ""
};

const documents = [
  {
    title: "VA Manual for RGI Supervisors",
    file: "/docs/supervisor-manual.pdf"
  },
  {
    title: "ICD 10 â€“ Fifth Edition , Vol 2",
    file: "/docs/supervisor-manual.pdf"
  },
  {
    title: "WHO Verbal Autopsy Instrument",
    file: "/docs/supervisor-manual.pdf"
  },
  {
    title: "Sample Vital Registration with Verbal Autopsy",
    file: "/docs/supervisor-manual.pdf"
  }

];
---

<Layout>
  <InnerHero content={heroContent} />

  <!-- Breadcrumb -->
  <nav class="bg-gray-100 border-b border-gray-300">
    <div class="max-w-5xl mx-auto px-4 py-2 text-sm text-gray-600">
      <a href="/" class="text-blue-700 hover:underline">Home</a> &gt; 
      <span>Documents</span>
    </div>
  </nav>

  <!-- Main Content -->
  <section class="max-w-2xl mx-auto py-10 space-y-4">
    {documents.map((doc) => (
      <a
        href={doc.file}
        target="_blank"
        rel="noopener noreferrer"
        download
        class="block p-6 bg-gray-100 rounded-xl shadow hover:bg-gray-200 hover:shadow-md transition flex items-center justify-between"
      >
        <span class="text-lg font-semibold text-gray-800">{doc.title}</span>

        <!-- Download Icon (Heroicons) -->
        <svg xmlns="http://www.w3.org/2000/svg" 
             fill="none" 
             viewBox="0 0 24 24" 
             stroke-width="1.5" 
             stroke="currentColor" 
             class="w-6 h-6 text-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" 
                d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M7.5 12l4.5 4.5m0 0l4.5-4.5m-4.5 4.5V3">
          </path>
        </svg>
      </a>
    ))}
  </section>
</Layout>
