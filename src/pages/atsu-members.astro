---
import Layout from "@layouts/Layout.astro";

const team = [
  { name: "Dr. Anand Krishnan", role: "Professor" },
  { name: "Dr. Baridalyne N", role: "Professor" },
  { name: "Dr. Sumit Malhotra", role: "Professor" },
  { name: "Dr. Ravneet Kaur", role: "Additional Professor" },
  { name: "Dr. Vivek Gupta", role: "Additional Professor" },
  { name: "Dr. Harshal Salve", role: "Additional Professor" },
  { name: "Dr. Rakesh Kumar", role: "Additional Professor" },
  { name: "Dr. Mohan Bairwa", role: "Associate Professor" },
];
---

<Layout>
  <section class="pt-[150px] pb-16 bg-gray-50">

    <div class="max-w-6xl mx-auto px-4 space-y-8">

      <h2 class="text-3xl font-semibold text-center text-gray-900">
        ATSU Members
      </h2>

      <div class="shadow-lg rounded-2xl border border-gray-200 overflow-hidden">

        <!-- Desktop Table Header -->
        <div class="hidden md:grid md:grid-cols-2 bg-blue-600 text-white uppercase text-xs font-semibold">
          <div class="p-3">Name</div>
          <div class="p-3">Designation</div>
        </div>

        <!-- Table Rows -->
        {team.map((member, index) => (
          <div
            class={`border-b border-gray-200 ${
              index % 2 === 0 ? "bg-white" : "bg-gray-50"
            } hover:bg-blue-50 transition`}
          >

            <!-- Desktop View -->
            <div class="hidden md:grid md:grid-cols-2 text-sm">
              <div class="p-3">{member.name}</div>
              <div class="p-3">{member.role}</div>
            </div>

            <!-- Mobile View -->
            <div class="md:hidden p-4 space-y-2 text-sm bg-white">
              <div>
                <span class="font-medium text-gray-800">Name:</span> {member.name}
              </div>
              <div>
                <span class="font-medium text-gray-800">Designation:</span> {member.role}
              </div>
            </div>

          </div>
        ))}

      </div>
    </div>

  </section>
</Layout>
