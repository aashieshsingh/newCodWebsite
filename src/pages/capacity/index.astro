---
import Layout from "@layouts/Layout.astro"
import InnerHero from "@components/sections/InnerHero.astro"

const heroContent = {
    title: "Capacity Building",
    description: ""
}

---

<Layout>
 <InnerHero content={heroContent} />
 <!-- Breadcrumb -->
  <nav class="bg-gray-100 border-b border-gray-300">
    <div class="max-w-5xl mx-auto px-4 py-2 text-sm text-gray-600">
      <a href="/" class="text-blue-700 hover:underline">Home</a> &gt; 
      <span>Capacity Building</span>
    </div>
  </nav>
 <section class="py-16 bg-gray-50">
  <div class="max-w-5xl mx-auto px-6 md:px-10">
    <div class="space-y-12 text-gray-800 leading-relaxed">
      
      <!-- Programs -->
        <div class=" rounded-2xl shadow-md p-6">
          <h2 class="text-2xl font-semibold mb-4 text-blue-700">Programs</h2>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            <li>Verbal Autopsy Interviewer Training for Supervisors</li>
            <li>ICD-10 Coding Workshops</li>
          </ul>
        </div>
        
        <!-- Resources -->  
        <div class=" rounded-2xl shadow-md p-6">
          <h2 class="text-2xl font-semibold mb-4 text-blue-700">Resources</h2>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            <li>Training Manuals</li>
            <li>Standard VA Forms</li>
          </ul>
        </div>
    </div>
  </div>
</section>
</Layout>

