---
import Layout from "@layouts/Layout.astro";
import InnerHero from "@components/sections/InnerHero.astro";

// ✅ Update your site pages manually here (like a menu list)
const pages = [
  { url: "/", name: "Home" },
  { url: "/about/", name: "About" },
  { url: "/blog/", name: "Blog" },
  { url: "/contact/", name: "Contact" },
  { url: "/gallery/", name: "Gallery" },
  { url: "/team/", name: "Team" },
  { url: "/tools/", name: "Tools" },
  { url: "/process/", name: "Process" },
  { url: "/capacity/", name: "Capacity" },
  { url: "/insights/", name: "Insights" },
  { url: "/privacy-policy/", name: "Privacy Policy" },
  { url: "/copyright/", name: "Copyright" },
  { url: "/disclaimer/", name: "Disclaimer" },
];

const heroContent = {
  title: "Sitemap",
  description: "",
};
---

<Layout>
  <InnerHero content={heroContent} />

  <!-- Breadcrumb -->
  <nav class="bg-gray-100 border-b border-gray-300">
    <div class="max-w-5xl mx-auto px-4 py-2 text-sm text-gray-600">
      <a href="/" class="text-blue-700 hover:underline">Home</a> &gt; 
      <span>Sitemap</span>
    </div>
  </nav>

  <section class="max-w-4xl mx-auto py-10 px-4">

    <ul class="text-gray-800 mb-4 leading-relaxed">
      {pages.map((p) => (
        <li class="flex items-center gap-2 text-lg">
          <span class="text-gray-400">•</span>
          <a
            href={p.url}
            class="text-blue-600 hover:underline font-medium"
          >
            {p.name}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>
