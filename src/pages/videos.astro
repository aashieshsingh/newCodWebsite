---
import Layout from "@layouts/Layout.astro";
import InnerHero from "@components/sections/InnerHero.astro";

const heroContent = {
  title: "Videos",
  description: ""
};

const videos = [
  {
    title: "Introduction of MINErVA",
    embed: "https://www.youtube.com/embed/To7cwRGQLYY?si=GZMBFRdUpK0-mqwI"
  },
  {
    title: "MINErVA-Mortality in India established through verbal Autopsy",
    embed: "https://www.youtube.com/embed/wD5_yNVtNnU?si=cjjFtBaLbX_x7TdL"
  },
  {
    title: "DeCoDe-VA Improving quality of cause of death ascertainment by doctors",
    embed: "https://www.youtube.com/embed/7wJmGHu4Xr8?si=-eThSL3tZfFZzdIp"
  },
  {
    title: "IPHACON Excess mortality due to COVID",
    embed: "https://www.youtube.com/embed/hnTgSSc5Hto?si=N6Qz-gxxsOanXAB5"
  },
  
];
---

<Layout>
  <InnerHero content={heroContent} />
  <!-- Breadcrumb -->
  <nav class="bg-gray-100 border-b border-gray-300">
    <div class="max-w-5xl mx-auto px-4 py-2 text-sm text-gray-600">
      <a href="/" class="text-blue-700 hover:underline">Home</a> &gt; 
      <span>Videos</span>
    </div>
  </nav>
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 md:px-10 text-gray-800">

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {videos.map(video => (
          <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <div class="aspect-w-16 aspect-h-9">
              <iframe
                src={video.embed}
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
                class="w-full h-56">
              </iframe>
            </div>
            <div class="p-4 text-center">
              <h3 class="text-sm font-semibold">{video.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
